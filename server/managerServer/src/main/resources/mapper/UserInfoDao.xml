<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.socialCircle.dao.UserInfoDao">
    <insert id="save">
        insert into user_info (pet_name, head_icon, gender,user_id)
        values (#{petName},#{headIcon},#{gender},#{id});
    </insert>
    <delete id="deleteById">
        delete from user_info
        <where>
            user_id = #{id}
        </where>
    </delete>
    <select id="getUserInfoByUserId" resultType="com.socialCircle.entity.UserInfo">
        select *
        from user_info
        <where>
            user_id = #{id}
        </where>
    </select>
    <select id="queryUsers" resultType="com.socialCircle.vm.UserInfoVM">
        select *,u.id id
        from user u
        left join user_info ui on u.id = ui.user_id
        <where>
            <if test="q != null">
                pet_name like #{q} and
            </if>
            <if test="getAdmin">
                permission != 0 and
            </if>
            <if test="!getAdmin">
                permission = 0 and
            </if>
            u.id != 1
        </where>
        order by u.id desc
        limit 0,10    </select>
    <select id="count" resultType="java.lang.Long">
        select COUNT(u.id)
        from user u
        left join user_info ui on u.id = ui.user_id
        <where>
            <if test="q != null">
                pet_name like #{q} and
            </if>
            <if test="getAdmin">
                permission != 0 and
            </if>
            <if test="!getAdmin">
                permission = 0 and
            </if>
            u.id != 1
        </where>
    </select>
</mapper>